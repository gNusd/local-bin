#!/bin/sh
#
# 	  mmmm  m mm   m   m   mmm
# 	 #" "#  #"  #  #   #  #   "
# 	 #   #  #   #  #   #   """m
# 	 "#m"#  #   #  "mm"#  "mmm"
#  	  m  #
#      ""
# a scrip parsing dotfiles for aliases and key bindings

# GLOBAL VARIABLES
BASE_DIR="$HOME/repositories/dotfiles"
CHOISE="zshalias ssh nvim"
PATERN="##"
INPUT=""

# Checking if $1 is in CHOISE
result=$(echo "$CHOISE" | grep "$1")

# Checking which query to run
[ -z "$result" ] && INPUT="$1" && unset "$1" && filename="$BASE_DIR/zsh_alias"
[ "$1" = "zshalias" ] || [ -z "$1" ] && filename="$BASE_DIR/zsh_alias"
[ "$1" = "ssh" ] && filename="$BASE_DIR/.ssh/ssh_alias" && [ ! -z "$2" ] && grp="ssh" && INPUT="$2"
[ "$1" = "nvim" ] && filename="$BASE_DIR/.config/nvim/init.vim" && PATERN='"##' && [ ! -z "$2" ] && INPUT="$2"

sr1=$(grep "^$PATERN" "$filename" | sed "s/$PATERN\(.*\):\(.*\)/\1 - \2/g" | grep -iF "$INPUT")
sr2=$(echo "$sr1" | sed "s/.*\s-\s//g")

[ -z "$grp" ] && line="$sr1"
[ "$grp" = "ssh" ] && line="$sr2" && echo "$line" | xclip -selection clipboard

echo "$line"
