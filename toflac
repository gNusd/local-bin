# FILENAME: toflac

toflac () {
		file="${input// /_}"
		filename="${file%%.*}.flac"
		ffmpeg -i "$input" -c:a flac $filename && rm "$input"
}
for D in *
do
		if [ -d "${D}" ]
		then
				for file in *
				do
						ext="${file##*.}"
						case "$ext" in
								ape | wv | wav | m4a)
										input="$file"
										toflac
										;;
								*)
						esac
				done
		fi
done
